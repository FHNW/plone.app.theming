
<div xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     class="info" tal:define="info options/info;
							  props info/properties;
							  sizespec props/size_specifier|nothing;">
	<img src="" tal:attributes="src info/preview" tal:condition="info/preview" />
	<p class="discreet">
		<b>Date Created</b>: <span tal:replace="props/dateCreated" />
		<b>Date Modified</b>: <span tal:replace="props/dateModified" />
		<b>Size</b>: 
		<tal:kb tal:condition="python: sizespec == 'kb'">
			<span tal:replace="props/size" /><span i18n:translate='filemanager_kb'>kb</span>
		</tal:kb>
		<tal:kb tal:condition="python: sizespec == 'mb'">
			<span tal:replace="props/size" /><span i18n:translate='filemanager_mb'>mb</span>
		</tal:kb>
	</p>
</div>